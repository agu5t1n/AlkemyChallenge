@{
    ViewBag.Title = "Iniciar Sesión";
}

<h2>@ViewBag.Title</h2>
<div class="container">
    @{
        if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-danger">@ViewBag.Message</div>
        }
    }

    <form action="/Home/Login" method="post">
        <div class="form-group">
            <label> Ingresa tu DNI</label>
            <input class="form-control" type="text" name="DniI" value="" />
        </div>

        <div class="form-group">
            <label> Ingresa tu Legajo</label>
            <input class="form-control" type="password" name="File" value="" />
        </div>
        
        <div class="form-group">
            <button class="btn btn-success"> Iniciar sesion</button>
        </div>
    </form>
 </div>
