@model List<AlkemyChallenge.Models.ViewModels.ListTeacher>
@{
    string Usuario = User.Identity.Name;
    if (Usuario == "Administrador")
    {
        ViewBag.Title = "Lista Profesores";


        <h2>@ViewBag.Title</h2>
        <div class="row" style="text-align:right;padding:5px">
            <a href="~/Teacher/New" class="btn btn-success">Nuevo Profesor</a>

        </div>
        <div class="container">
            @{
                if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="alert alert-danger">@ViewBag.Message</div>
                }
            }
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <tr>
                        <th>Id_Teacher</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>DNI</th>
                        <th>Legajo</th>
                        <th>Activo</th>
                        <th></th>
                    </tr>
                    @foreach (var Oteacher in Model)
                    {
                <tr>
                    <td>@Oteacher.Id</td>
                    <td>@Oteacher.First_Name</td>
                    <td>@Oteacher.Last_Name</td>
                    <td>@Oteacher.DNI</td>
                    <td>@Oteacher.File_Teacher</td>
                    <td>@Oteacher.Active</td>
                    <td>
                        <a class="btn btn-default" href="~/Teacher/Edit/@Oteacher.Id">Editar</a>
                        <a class="btn btn-danger" href="~/Teacher/Delete/@Oteacher.Id">Eliminar</a>
                        <a class="btn btn-warning" href="~/Teacher/Active/@Oteacher.Id">Activar/Desactivar</a>
                    </td>
                </tr>

        }
                </table>
            </div>
        </div>
    }
    else
    {
        <label> NO TIENE LOS PERMISOS NECESARIOS</label>
        <a class="btn btn-danger" href="~/Matter">Volver</a>

    }
}